type eth = { int<48> dstMac; int<48> srcMac; int<16> etherTy; }
type ip =  { int srcIp; int dstIp; int srcPort; int dstPort; }

event background(int<16> x) { printf("%d", x); }
event eth(eth e) { generate background(e#etherTy); }
event eth_ip(eth e, ip ip, Payload.t payload) { generate background(e#etherTy); }

parser parse_ip(eth e) {
  read ip ip;
  generate eth_ip(e, ip, Payload.parse());
}

// LUCID_ETHERTY is builtin
// do_lucid_parsing() is also builtin
const int<16> IP_ETHERTY = 0x8000;

parser main() {
  read eth e;
  match e#etherTy with
  | LUCID_ETHERTY -> { do_lucid_parsing(); }
  | IP_ETHERTY -> { parse_ip(e); }
  | 0 -> { drop; }
  | _ -> {
      e#etherTy = 0x9999;
      generate eth(e);
  }
}
